#
# 1. Replace the placeholder values (<...>) with your actual configuration.
# 2. Ensure the .env file is added to your .gitignore to keep secrets safe.
#

# --- Internal Service Port ---
# The internal port the API runs on inside the container. Do not change.
ASPNETCORE_URLS="http://*:5000"

# --- Database Connection Strings ---
ConnectionStrings__UserConnectionString="Host=<POSTGRES_HOST>;Port=<POSTGRES_PORT>;Database=ztc_db;Username=<DATABASE_USER>;Password=<DATABASE_USER_PASSWORD>"
ConnectionStrings__AdminConnectionString="Host=<POSTGRES_HOST>;Port=<POSTGRES_PORT>;Database=ztc_db;Username=<DATABASE_ADMIN>;Password=<DATABASE_ADMIN_PASSWORD>"

# --- RabbitMQ Event Bus Connection ---
Eventbus__HostName="<RABBITMQ_HOST>"
Eventbus__VirtualHost="<RABBITMQ_VHOST>"
Eventbus__UserName="<RABBITMQ_USERNAME>"
Eventbus__Password="<RABBITMQ_PASSWORD>"

# --- Redis Cache Connection ---
Redis__ConnectionString="<REDIS_HOST_AND_PORT>"

# --- Identity Provider (OIDC) Settings ---
Auth__Authority="<IDP_AUTHORITY_URL>"
Auth__ValidIssuer="<IDP_ISSUER_URL>"
Auth__ValidAudience="<IDP_AUDIENCE>"

# --- ZGW Service Dependencies ---
# URLs for other ZGW APIs that this service needs to communicate with.
Services__AC__Api="<AC_API_URL>"
Services__NRC__Api="<NRC_API_URL>"

# --- ZGW Service Account Credentials ---
# Credentials used for secure server-to-server communication with other ZGW APIs.
# The __0__ corresponds to the first item in the 'Credentials' array in appsettings.json.
ZgwServiceAccounts__Credentials__0__Rsin="<SERVICE_ACCOUNT_RSIN>"
ZgwServiceAccounts__Credentials__0__ClientId="<SERVICE_ACCOUNT_CLIENT_ID>"
ZgwServiceAccounts__Credentials__0__ClientSecret="<SERVICE_ACCOUNT_CLIENT_SECRET>"
