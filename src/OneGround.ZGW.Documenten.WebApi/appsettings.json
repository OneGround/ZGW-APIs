{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning",
        "Microsoft.AspNetCore.Authentication": "Warning",
        "System.Net.Http.HttpClient": "Warning",
        "Polly": "Warning"
      }
    }
  },
  "Application": {
    "SkipMigrationsAtStartup": false,
    "IgnoreInformatieObjectTypeValidation": false,
    "IgnoreZaakAndBesluitValidation": false,
    "DontSendNotificaties": false,
    "IgnoreBusinessRuleDrc010": true,
    "EnkelvoudigInformatieObjectenPageSize": 100,
    "VerzendingenPageSize": 100,
    "UploadLargeDocumentChunkSizeMB": 50,
    "DocumentJobPrioritizationAtDownload": false,
    "CachedSecretExpirationTime": "00:03:00",
    "AudittrailRetrieveForRsins": [],
    "AudittrailRecordRetrieveList": false,
    "AudittrailRecordRetrieveMinimal": true,
    "ResolveForwardedHost": true,
    "DefaultDocumentenService": "ceph",
    "NummerGeneratorFormats": {
      "documenten": "D{yyyy}-{v^8}"
    },
    "ExpandSettings": {
      "List": "informatieobject, informatieobjecttype",
      "Search": "informatieobject, informatieobjecttype",
      "Get": "all"
    }
  },
  "PollyConfig": {
    "AC": {
      "Retry": {
        "MaxRetryAttempts": 2,
        "BackoffType": "Constant",
        "Delay": "00:00:00.100"
      },
      "Timeout": {
        "Timeout": "00:00:30"
      }
    },
    "ZTC": {
      "Retry": {
        "MaxRetryAttempts": 2,
        "BackoffType": "Constant",
        "Delay": "00:00:00.100"
      },
      "Timeout": {
        "Timeout": "00:00:30"
      }
    }
  },
  "CephDocumentServicesSettings": {
    "ssl": false
  }
}
